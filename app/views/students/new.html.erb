<div class="row">
    <div class="columns small-6 small-centered">
        <h1>Join your class!</h1>
        <%= @period.shortcode %>
        <p><%= @period.teacher.email %></p>
        <%= simple_form_for @student do |f| %>
            <div class="form-inputs">
                <%= f.input :first_name %>
                <%= f.input :phone_number %>
            </div>    
            <div class="form-inputs">
                <%= f.button :submit, "Join" %>
            </div>
        <% end %>
    </div>
</div>