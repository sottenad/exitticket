<% content_for :title do %>
    Editing <% @student.name %>
<% end %>

<div class="row">
    <div class="columns small-12 large-6 small-centered">
        <h2>Edit Student</h2>
        <%= simple_form_for @student do |f| %>
            <div class="form-inputs">
                    <%= f.input :name, label: 'Your Name', placeholder: 'John Dough', :required => true, :validate => true %>
                    <%= f.input :phone_number, :as => :tel, :required => true, placeholder: '(555) 123-4579', input_html: {value: @student.formatted_number}  %>
                    <%= f.button :submit, "Update Student", :class => 'left' %>
            </div>    
        <% end %>
    </div>
</div>